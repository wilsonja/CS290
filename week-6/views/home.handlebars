<!--form to enter workout data -->
<form method='get' id='wkEntry' action='/newEntry'>
  <fieldset>
    <legend>Enter your workout info</legend>
    <label for='name'>Workout name:</label>
      <input type='text' name='name' id='name' required></br>
    <label for='reps'>Number of reps: </label>
      <input type='number' name='reps' id='reps' required></br>
    <label for='weight'>Weight:</label>
      <input type='number' name='weight' id='weight' required></br>
    <label for='date'>Date:</label>
      <input type='date' name='date' id='date' required></br>
    <label for='lbs'>Lbs</label>
      <input type='radio' name='lbs' value='1' id='lbs'></br>
    <label for='kgs'>Kgs</label>
      <input type='radio' name='lbs' value='0' id='kgs'></br>
    <input type='submit' id='submit' value='Submit workout'>
  </fieldset>
</form>

<!-- table displaying workout details -->
<h1>Workout Details</h1>
<table id='wkDetails'>
  <thead>
    <tr>
      <th style='display:none'>id</th>
      <th>Exercise</th>
      <th>Reps</th>
      <th>Weight</th>
      <th>Unit</th>
      <th>Date</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody id='wkBody'>
    {{#each results}}
    <tr>
      <td style='display:none'>{{this.id}}</td>
      <td>{{this.name}}</td>
      <td>{{this.reps}}</td>
      <td>{{this.weight}}</td>
      {{#if this.lbs}}
        <td>Lbs</td>
      {{else}}
        <td>Kgs</td>
      {{/if}}
      <td>{{this.date}}</td>
      <td><a href="wkUpdate/?id={{this.id}}"><input type="button" value="Edit"></a></td>
      <td><input type="button" value="Delete" onclick="deleteRow('wkBody', this, {{this.id}})"></td>
    </tr>
    {{/each}}
  </tbody>
</table>
<script src='/js/script.js'></script>
